            }
          ]
        },
        {
          "key": "client",
          "label": "client",
          "description": "client properties",
          "type": "array",
          "properties": [
            {
              "key": "cpu",
              "label": "CPU",
              "description": "CPUs of each node",
              "type": "integer",
