              ],
              "required": "yes"
            },
            {
              "key": "count",
              "label": "count",
              "description": "Number of log nodes for the cluster to create",
              "type": "integer",
              "default": 2,
              "range":[0,2,3,4,5],
              "required": "yes"
            },
            {
              "key": "instance_class",
              "label": "resource type",
